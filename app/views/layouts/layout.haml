!!!5
%html
	%head
		%title Dinogram | Put a Dino on it

		%link(href="/css/reset.css" media="screen" rel="stylesheet" type="text/css")/
		%link(href="/css/bootstrap.css" media="screen" rel="stylesheet" type="text/css")/
		%link(href="/css/bootstrap-responsive.css" media="screen" rel="stylesheet" type="text/css")/

		%link(href='http://fonts.googleapis.com/css?family=Finger+Paint' rel='stylesheet' type='text/css')/

		%script(src="/scripts/jquery-1.8.1.js" language="javascript" type="text/javascript")
		%script(src="/scripts/bootstrap-2.1.1.js" language="javascript" type="text/javascript")
		
	%body
		.container
			.navbar
				.navbar-inner
					.container
						%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
							%span.icon-bar
							%span.icon-bar
							%span.icon-bar
						%a.brand{:href => "/", :style=> "font-family: 'Finger Paint', cursive;"}
							Dinogram
						.nav-collapse
							%ul.nav
								%li
									%a{:href => "/what"}
										What?
								%li
									%a{:href => "/why"}
										Why?
								%li
									%a{:href => "/how"}
										How?

							- if current_user == nil
								%ul.nav.pull-right
									%li.dropdown
										%a#drop.dropdown-toggle{:href => "#", :role => "button", "data-toggle" => "dropdown"}
											%strong Sign In
											%b.caret
										%div.dropdown-menu{:style => "padding: 15px; padding-bottom: 0px;"}
											%form{:method => "POST", :action => "/session"}
												%input{:name => "email", :type => "text", :size => "30", :placeholder => "Email", :style => "margin-bottom: 15px;"}
												%input{:name => "password", :type => "password", :size => "30", :placeholder => "Password", :style => "margin-bottom: 15px;"}
												%input.btn.btn-primary{:type => "submit", :value => "Sign In", :style => "clear: left; width: 100%; height: 32px; font-size: 13px;"}

							- else
								%ul.nav.pull-right
									%li.dropdown
										%a#drop.dropdown-toggle{:href => "#", :role => "button", "data-toggle" => "dropdown"}
											%strong #{current_user.name}
											%b.caret
										%ul.dropdown-menu{:role => "menu", "aria-labelledby" => "drop3"}
											%li
												%a{:href => "/dinographer/#{current_user.id}", :tabindex => "-1"}
													Profile
											%li.divider
											%li
												%a{:href => "/session/signout", :tabindex => "-1"}
													Logout
			.container
				=yield

			%footer.footer